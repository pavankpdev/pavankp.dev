---
import Layout from '../../layouts/Layout.astro';
import { ImageWithFallback } from '../../components/ImageWithFallback';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

const mediaUrl = import.meta.env.PUBLIC_MEDIA_URL;
const { post } = Astro.props;
const { Content } = await render(post);
const imageUrl = `${mediaUrl}/blog/thumbnails/${post.id}.avif`;
---

<Layout title={`${post.data.title} - Pavan Kumar`}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-24 min-h-screen" transition:animate="fade">
    <a
      href="/blog"
      class="mb-8 flex items-center gap-2 text-neutral-400 hover:text-cyan-400 transition-colors font-mono text-sm no-underline"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
      Back to Blog
    </a>

    <header class="mb-12 text-center">
      <div class="flex flex-wrap justify-center gap-2 mb-6">
        {post.data.tags.map((tag) => (
          <span class="px-3 py-1 text-xs font-mono rounded-full bg-magenta-950/30 text-magenta-400 border border-magenta-500/30">
            {tag}
          </span>
        ))}
      </div>
      <h1 class="text-3xl md:text-5xl font-bold font-orbitron text-white mb-6 leading-tight">
        {post.data.title}
      </h1>
      <div class="flex flex-wrap items-center justify-center gap-x-6 gap-y-2 text-sm text-neutral-400 font-mono border-t border-b border-white/10 py-4 max-w-2xl mx-auto">
        <span class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/></svg>
          {post.data.date}
        </span>
        <span class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
          {post.data.readTime}
        </span>
        <span class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="20" y1="9" y2="9"/><line x1="4" x2="20" y1="15" y2="15"/><line x1="10" x2="8" y1="3" y2="21"/><line x1="16" x2="14" y1="3" y2="21"/></svg>
          Author: Pavan Kumar
        </span>
      </div>
    </header>

    <div class="relative aspect-video rounded-xl overflow-hidden mb-12 border border-white/10 shadow-2xl shadow-cyan-900/20">
      <ImageWithFallback
        src={imageUrl}
        alt={post.data.title}
        className="w-full h-full object-cover"
        client:load
      />
    </div>

    <article class="blog-prose prose prose-invert prose-lg max-w-none">
      <Content />
    </article>

    <div class="mt-16 pt-8 border-t border-white/10">
      <h3 class="text-lg font-bold text-white font-orbitron mb-4">Share this post</h3>
      <div class="share-btn" data-title={post.data.title} data-desc={post.data.excerpt}>
        <a data-id="tw" aria-label="Share on Twitter">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          <span>Twitter</span>
        </a>
        <a data-id="in" aria-label="Share on LinkedIn">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
          <span>LinkedIn</span>
        </a>
        <a data-id="re" aria-label="Share on Reddit">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm6.066 13.71c.149.314.222.654.222 1.01 0 2.671-3.087 4.84-6.888 4.84-3.8 0-6.888-2.169-6.888-4.84 0-.356.073-.696.222-1.01a1.502 1.502 0 0 1-.543-2.46 1.5 1.5 0 0 1 2.31-.248c1.1-.742 2.558-1.2 4.138-1.27l.845-3.97a.328.328 0 0 1 .393-.253l2.828.6a1.04 1.04 0 1 1-.117.49l-2.531-.537-.744 3.494c1.544.084 2.968.54 4.044 1.27a1.5 1.5 0 0 1 2.308.248 1.502 1.502 0 0 1-.543 2.46h-.002zm-10.088.908a1.04 1.04 0 1 0 2.08 0 1.04 1.04 0 0 0-2.08 0zm6.56 2.554c-.994.994-2.893 1.07-3.538 1.07-.645 0-2.544-.076-3.538-1.07a.373.373 0 1 1 .528-.528c.625.626 1.962.846 3.01.846s2.385-.22 3.01-.846a.373.373 0 1 1 .528.528zm-.418-1.514a1.04 1.04 0 1 0 0-2.08 1.04 1.04 0 0 0 0 2.08z"/></svg>
          <span>Reddit</span>
        </a>
        <a data-id="copy" aria-label="Copy link">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect width="14" height="14" x="8" y="8" rx="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
          <span>Copy link</span>
        </a>
      </div>
    </div>
  </div>
</Layout>

<script>
  import 'share-buttons';

  // Client-side mermaid rendering
  async function renderMermaid() {
    // Shiki wraps code blocks as <pre data-language="mermaid"><code>...</code></pre>
    const mermaidBlocks = document.querySelectorAll('pre[data-language="mermaid"]');
    if (mermaidBlocks.length === 0) return;

    const { default: mermaid } = await import('https://cdn.jsdelivr.net/npm/mermaid@11/dist/mermaid.esm.min.mjs');
    mermaid.initialize({
      startOnLoad: false,
      theme: 'dark',
      themeVariables: {
        primaryColor: '#164e63',
        primaryTextColor: '#22d3ee',
        primaryBorderColor: '#0e7490',
        lineColor: '#22d3ee',
        secondaryColor: '#1e1b4b',
        tertiaryColor: '#0c0a09',
        fontFamily: 'JetBrains Mono, monospace',
        fontSize: '14px',
        noteBkgColor: '#1c1917',
        noteTextColor: '#d4d4d4',
        noteBorderColor: '#22d3ee40',
      },
    });

    for (const pre of mermaidBlocks) {
      const code = pre.textContent || '';
      const container = document.createElement('div');
      container.className = 'mermaid-diagram my-8 flex justify-center';

      try {
        const { svg } = await mermaid.render(`mermaid-${Math.random().toString(36).slice(2)}`, code);
        container.innerHTML = svg;
        pre.replaceWith(container);
      } catch (e) {
        // If mermaid fails, leave the code block as-is
        console.warn('Mermaid rendering failed:', e);
      }
    }
  }

  // Run on initial load and after view transitions
  renderMermaid();
  document.addEventListener('astro:after-swap', renderMermaid);
</script>

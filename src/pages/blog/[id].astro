---
import Layout from '../../layouts/Layout.astro';
import { ImageWithFallback } from '../../components/ImageWithFallback';
import { BLOG_POSTS } from '../../data';
import type { BlogPost } from '../../data';

export function getStaticPaths() {
  return BLOG_POSTS.map((post) => ({
    params: { id: post.id.toString() },
    props: { post },
  }));
}

interface Props {
  post: BlogPost;
}

const { post } = Astro.props;
---

<Layout title={`${post.title} - Pavan Kumar`}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-24 min-h-screen" transition:animate="fade">
    <a
      href="/blog"
      class="mb-8 flex items-center gap-2 text-neutral-400 hover:text-cyan-400 transition-colors font-mono text-sm no-underline"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
      Back to Blog
    </a>

    <header class="mb-12 text-center">
      <div class="flex flex-wrap justify-center gap-2 mb-6">
        {post.tags.map((tag) => (
          <span class="px-3 py-1 text-xs font-mono rounded-full bg-magenta-950/30 text-magenta-400 border border-magenta-500/30">
            {tag}
          </span>
        ))}
      </div>
      <h1 class="text-3xl md:text-5xl font-bold font-orbitron text-white mb-6 leading-tight">
        {post.title}
      </h1>
      <div class="flex items-center justify-center gap-6 text-sm text-neutral-400 font-mono border-t border-b border-white/10 py-4 max-w-2xl mx-auto">
        <span class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/></svg>
          {post.date}
        </span>
        <span class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
          {post.readTime}
        </span>
        <span class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="20" y1="9" y2="9"/><line x1="4" x2="20" y1="15" y2="15"/><line x1="10" x2="8" y1="3" y2="21"/><line x1="16" x2="14" y1="3" y2="21"/></svg>
          Author: Pavan Kumar
        </span>
      </div>
    </header>

    <div class="relative aspect-video rounded-xl overflow-hidden mb-12 border border-white/10 shadow-2xl shadow-cyan-900/20">
      <ImageWithFallback
        src={post.image}
        alt={post.title}
        className="w-full h-full object-cover"
        client:load
      />
    </div>

    <article
      class="prose prose-invert prose-lg max-w-none prose-headings:font-orbitron prose-headings:text-cyan-50 prose-p:text-neutral-300 prose-a:text-cyan-400 prose-pre:bg-neutral-900 prose-pre:border prose-pre:border-white/10 prose-code:text-magenta-300"
      set:html={post.content}
    />

    <div class="mt-16 pt-8 border-t border-white/10 flex justify-between items-center">
      <h3 class="text-xl font-bold text-white font-orbitron">Share this post</h3>
      <div class="flex gap-4">
        <button class="p-2 rounded-full bg-neutral-900 hover:bg-neutral-800 text-white transition-colors">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-12.7 14.6-2.6-2.1-3-5.7-.6-8.8-3.7-.4-4.9-3.2-5-4.8 1.1 1 2.5 1.2 3.5 1-3.1-2.2-3.8-7.2-1.6-9.1 2.3 2.7 5.6 4.5 9.4 4.8-1.5-7.5 9.4-7.5 9.4-7.5z" /></svg>
        </button>
        <button class="p-2 rounded-full bg-neutral-900 hover:bg-neutral-800 text-white transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
        </button>
      </div>
    </div>
  </div>
</Layout>

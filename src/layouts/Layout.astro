---
import { ViewTransitions } from 'astro:transitions';
import Navbar from '../components/Navbar';
import { AnimatedGridPattern } from '../components/ui/animated-grid-pattern';
import Footer from '../components/Footer.astro';
import '../styles/index.css';

interface Props {
  title?: string;
}

const { title = 'Pavan Kumar - Developer Portfolio' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="min-h-screen bg-neutral-950 text-neutral-200 selection:bg-cyan-500/30 selection:text-white font-sans overflow-x-hidden">
      <Navbar currentPath={currentPath} client:load />

      <main class="pt-20 relative">
        <!-- Global animated background grid -->
        <div class="fixed inset-0 pointer-events-none z-0" transition:persist="grid-background">
          <AnimatedGridPattern
            numSquares={40}
            maxOpacity={0.1}
            duration={4}
            width={48}
            height={48}
            className="fill-cyan-500/15 stroke-white/[0.03] [mask-image:radial-gradient(ellipse_80%_60%_at_50%_0%,#000_50%,transparent_100%)]"
            client:load
          />
        </div>

        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
